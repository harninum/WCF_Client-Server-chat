<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFBB45C" Offset="0"/>
                <GradientStop Color="#FFDE2626" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="40" Margin="222,10,0,0" TextWrapping="Wrap" Text="UserName" VerticalAlignment="Top" Width="546"/>
        <Button x:Name="bConnectdisconnect" Click ="Button_Click" Content="Connect" HorizontalAlignment="Left" Height="40" Margin="27,10,0,0" VerticalAlignment="Top" Width="169" Background="#FF7FE1CC"/>
        <ListBox x:Name="lbChat" Height="213" Margin="27,65,0,0" VerticalAlignment="Top" Width="741"/>
        <TextBox x:Name="tbMessage" Height="112" Margin="29,299,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="739" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
